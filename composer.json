{
    "name": "magicoli/wrap",
    "description": "WordPress-based authentication for third-party applications via .htaccess",
    "type": "wordpress-plugin",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Olivier van Helden",
            "email": "olivier@van-helden.net"
        }
    ],
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.1",
        "magicoli/php-bump-library": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "bump-version": "vendor/magicoli/php-bump-library/vendor/bin/robo --load-from=vendor/magicoli/php-bump-library/RoboFile.php bump:version"
    }    
}
